<script type="text/javascript">
var upArray=new Array("0x0627", "0x0628", "0x0686", "0x062F", "0x0639", "0x0641", "0x06AF", "0x06BE", "0x06CC", "0x062C", "0x06A9", "0x0644", "0x0645", "0x0646", "0x06C1", "0x067E", "0x0642", "0x0631", "0x0633", "0x062A", "0x0626", "0x0637", "0x0648", "0x0634", "0x06D2", "0x0632", "0x0622", "0x0613", "0x062B", "0x0688", "''", "''", "0x063A", "0x062D", "''", "0x0636", "0x062E", "0x0612", "0x0627", "0x06BA", "''", "0x064F", "''", "0x0691", "0x0635", "0x0679", "0x060C", "0x0638", "0xFDFA", "0x0698", "''", "0x0630", "ٍ", "0x31", "0x32", "0x33", "0x34", "0x35", "0x36", "0x37", "0x38", " ", "0x39", "0x30", "0x0624", "0x0623", "0x064D", "0x0021", "0x064F", "0x064E", "0x0626", "0x064A", "''", "0x0621", "0x064C", "0x0029", "0x0028", "0x0651", "0x0622", "0x060C", "0x06D4", "0x06D4", "0x064E", "0x064E", "0x061F", "0x061B", "58", "0x2018", "0x2019", "0x2018", "0x2019", "''", "''", "''", "''");

function checksform(formName , number)
	{
		
		var valid = 0;
		//var name 	= $("#name").val();
		
		var name = formName.name.value;
		var email = formName.email.value;
		var country = formName.country.value;
		var message = formName.message.value;
		var security_vals = formName.security_vals.value;
		var security_codes = formName.security_codes.value;
		//var email = $("#email").val();
		//var country = $("#country").val();
		//var message = $("#message").val();
		var atpos=email.indexOf("@");
		var dotpos=email.lastIndexOf(".");
		
			//validation for own email //		
	if(email == '')
		{
			$("#email_err").html("ای میل کا اندراج کریں");
			$("#email").focus();
			
			valid = valid + 1;
		}
		else if(atpos<1 || dotpos<atpos+2 || dotpos+2>=email.length)
		{
			$("#email_err").html("درست ای میل اندراج کا کریں");
			//$("#email").focus();
			formName.email.focus();
			valid = valid + 1;
		}
		else
		{
			$("#email_err").html("");
			
		}
		//validation for own name //	
		if(name == '')
		{
			$("#name_err").html("نام کا اندراج کریں");
			//$("#name").focus();
			formName.name.focus();
			valid = valid + 1;
		}
		else
		{
			$("#name_err").html("");
		}
		
			//validation for own message //	
		if(country == '')
		{
			$("#country_err").html("شہر یا ملک کا اندراج کریں");
			//$("#message").focus();
			formName.country.focus();
			valid = valid + 1;
		}
		else
		{
			$("#country_err").html("");
		}
		
		
		
		
	
		
		if(message == '')
		{
			$("#message_err").html("پیغام کا اندراج کریں");
			//$("#message").focus();
			formName.message.focus();
			valid = valid + 1;
		}
		else
		{
			$("#message_err").html("");
		}
		
		
			if(security_vals != security_codes)
		{
			$("#sec_checks_err").html("کوڈ کا اندراج کریں");
			//$("#message").focus();
			formName.security_vals.focus();
			valid = valid + 1;
		}
		else
		{
			$("#sec_checks_err").html("");
		}
		

		if(valid == 0)
		 {
			 return true;
		 }
		 else
		 {
			return false;
	     }
		 
	}
	
	
	function get_more_news(sql,final_limit,limit,baab_title,book_id,sort_by)
	{
		$("#biz_arrow_main").html('<div id="biz_left_arrow"><span class="icon-text">&#11013;</span></div>');
		$("#news_list_wrap").load("https://www.urdupoint.com/books/ajax.php?act=load_left_books_episodes&final_limit="+final_limit+"&limit="+limit+"&baab_title="+baab_title+"&sql="+sql+"&book_id="+book_id+"&sort_by="+sort_by );
		goToByScroll('news_list_wrap_scroll');
		$('#biz_left_arrow').delay(3000).fadeOut(500)
	}
				
</script>
</head>

